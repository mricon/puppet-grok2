# MANAGED BY PUPPET
[<%= @name -%>]
manifest = <%= @local_manifest %>
toplevel = <%= @toplevel %>
loglevel = <%= @loglevel %>
log = <%= @fsck_logfile %>
lock = <%= @fsck_lockfile %>
statusfile = <%= @fsck_statusfile %>
frequency = <%= @fsck_frequency %>

<%- if (defined? @fsck_ignore_errors) -%>
ignore_errors =
    <%- @fsck_ignore_errors.each do |igline| -%>
                <%= igline %>
    <%- end -%>
<%- end -%>

<%- if @fsck_repack -%>
repack = yes
<%- if @fsck_repack_flags -%>
repack_flags = <%= @fsck_repack_flags %>
<%- end -%>
<%- if @fsck_full_repack_every -%>
full_repack_every = <%= @fsck_full_repack_every %>
<%- end -%>
<%- if @fsck_full_repack_flags -%>
full_repack_flags = <%= @fsck_full_repack_flags %>
<%- end -%>
<%- else -%>
repack = no
<%- end -%>

<%- if @fsck_prune -%>
prune = yes
<%- else -%>
prune = no
<%- end -%>
