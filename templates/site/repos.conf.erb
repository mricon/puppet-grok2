# MANAGED BY PUPPET
[<%= @name -%>]
site = <%= @pull_site_url %>
manifest = <%= @pull_remote_manifest %>
toplevel = <%= @toplevel %>
mymanifest = <%= @local_manifest %>
log = <%= @pull_logfile %>
loglevel = <%= @loglevel %>
default_owner = <%= @pull_default_owner %>
purgeprotect = <%= @pull_purgeprotect %>
pull_threads = <%= @pull_threads %>

<%- if (defined? @pull_projectslist) -%>
projectslist = <%= @pull_projectslist %>
<%- if (defined? @pull_projectslist_trimtop) -%>
projectslist_trimptop = <%= @pull_projectslist_trimtop %>
<%- end -%>
<%- if @pull_projectslist_symlinks -%>
projectslist_symlinks = yes
<%- else -%>
projectslist_symlinks = no
<%- end -%>
<%- end -%>
<%- if (defined? @pull_post_update_hook) -%>
post_update_hook = <%= @pull_post_update_hook %>
<%- end -%>
<%- if (defined? @pull_include) -%>
include =
    <%- @pull_include.each do |incline| -%>
          <%= incline %>
    <%- end -%>
<%- end -%>
<%- if (defined? @pull_exclude) -%>
exclude =
    <%- @pull_exclude.each do |excline| -%>
          <%= excline %>
      <%- end -%>
<%- end -%>
